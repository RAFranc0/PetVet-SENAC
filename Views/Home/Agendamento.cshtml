@model AgendamentoViewModel

@{
    ViewData["Title"] = "Agendamento";
}

<div class="container">
    <h2 class="display-4 mb-2">Agendamento</h2>

    <div class="w-50">
        @if (ViewData["Mensagem"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewData["Mensagem"]
            </div>
        }
    </div>

    <form class="w-50" asp-action="EnviarAgendamento" method="post" autocomplete="off">
        <div class="form-group mb-2">
            <label asp-for="Nome"></label>
            <input class="form-control" asp-for="Nome" type="text">
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="Telefone"></label>
            <input class="form-control" asp-for="Telefone" type="text">
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="Email"></label>
            <input class="form-control" asp-for="Email" type="email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="Data"></label>
            <input class="form-control" type="datetime" value="@Model.Data" readonly>
        </div>
        <div class="form-group mb-2">
            <label asp-for="Animal"></label>
            <select class="form-select" asp-for="Animal" type="text">
                <option selected></option>
                <option>Cachorro</option>
                <option>Gato</option>
                <option>Outro</option>
            </select>
            <span asp-validation-for="Animal" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="Necessidade"></label>
            <textarea class="form-control" asp-for="Necessidade" type="text" rows="3"></textarea>
            <span asp-validation-for="Necessidade" class="text-danger"></span>
        </div>

        <input type="submit" class="btn btn-secondary" value="Agendar">
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
