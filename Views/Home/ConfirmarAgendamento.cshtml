@model AgendamentoViewModel

@{
    ViewData["Title"] = "Confirmação";
}

<div class="container">
    <h2 class="display-4">Confirme os dados do seu agendamento:</h2>

    <form method="post" class="w-50" autocomplete="off">
        <div class="form-group mb-2">
            <label asp-for="Nome"></label>
            <input class="form-control" type="text" value="@Model.Nome" disabled>
        </div>
        <div class="form-group mb-2">
            <label asp-for="Telefone"></label>
            <input class="form-control" type="text" value="@Model.Telefone" disabled>
        </div>
        <div class="form-group mb-2">
            <label asp-for="Email"></label>
            <input class="form-control" type="email" value="@Model.Email" disabled>
        </div>
        <div class="form-group mb-2">
            <label asp-for="Data"></label>
            <input class="form-control" type="datetime" value="@Model.Data" disabled>
        </div>
        <div class="form-group mb-2">
            <label asp-for="Animal"></label>
            <input class="form-control" type="text" value="@Model.Animal" disabled>
        </div>
        <div class="form-group mb-2">
            <label asp-for="Necessidade"></label>
            <textarea class="form-control" asp-for="Necessidade" type="text" disabled>@Model.Necessidade</textarea>
        </div>
        <input type="submit" class="btn btn-secondary" value="Confirmar" asp-action="ConfirmarAgendamento">
        <input type="submit" class="btn btn-secondary" value="Voltar" asp-action="Agendamento">
    </form>
</div>
